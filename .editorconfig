root = true

[*]
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,jsx,ts,tsx,vue}]
indent_style = tab

[*.{css,sass,scss}]
indent_style = tab

[*.md]
indent_style = space
trim_trailing_whitespace = false

[*.{json,yml,yaml}]
indent_style = space
trim_trailing_whitespace = false
